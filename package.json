{
	"name": "nao-chat",
	"type": "module",
	"workspaces": [
		"apps/*"
	],
	"scripts": {
		"dev": "npm-run-all -lp dev:backend dev:frontend dev:fastapi",
		"dev:backend": "npm run dev -w backend",
		"dev:frontend": "npm run dev -w frontend",
		"dev:fastapi": "npm run fastapi -w backend",
		"lint": "npm run lint -w backend && npm run lint -w frontend",
		"lint:fix": "npm run lint:fix -w backend && npm run lint:fix -w frontend",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"publish": "f() { cd cli && python build.py --bump ${1:-patch} -f && uv publish dist/*; }; f",
		"prepare": "husky",
		"pg:start": "docker compose up -d",
		"pg:stop": "docker compose stop",
		"pg:reset": "docker compose down -v"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"eslint": "^9.39.2",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"husky": "^9.1.7",
		"npm-run-all": "^4.1.5",
		"typescript-eslint": "^8.51.0"
	},
	"dependencies": {
		"depd": "^2.0.0"
	}
}
