{
	"name": "backend",
	"type": "module",
	"exports": {
		"./trpc": "./src/trpc/router.ts",
		"./chat": "./src/types/chat.ts",
		"./tools": "./src/agents/tools/index.ts"
	},
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"fastapi": "cd ../../cli && uv run ../apps/backend/fastapi/main.py",
		"build": "tsup src/index.ts --format esm --target node20 --minify",
		"build:standalone": "bun build src/cli.ts --compile --outfile nao-chat-server",
		"start": "node dist/index.js",
		"test": "vitest run",
		"lint": "eslint .",
		"lint:fix": "eslint --fix",
		"db:generate": "bash scripts/db.generate.sh",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:pull": "drizzle-kit pull",
		"db:studio": "drizzle-kit studio",
		"db:drop": "drizzle-kit drop",
		"db:reset": "rm db.sqlite",
		"format": "prettier --write ."
	},
	"dependencies": {
		"@ai-sdk/openai": "^3.0.1",
		"@fastify/static": "^8.1.0",
		"@trpc/server": "^11.8.1",
		"ai": "^6.0.3",
		"better-auth": "^1.4.10",
		"better-sqlite3": "^12.5.0",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"fastify": "^5.6.2",
		"fastify-plugin": "^5.1.0",
		"fastify-type-provider-zod": "^6.1.0",
		"pg": "^8.16.3",
		"postgres": "^3.4.8",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.18.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/bun": "^1.3.5",
		"@types/node": "^25.0.3",
		"@types/pg": "^8.16.0",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9.18.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"tsup": "^8.5.1",
		"typescript-eslint": "^8.21.0",
		"vitest": "^4.0.16"
	}
}
